@model List<ProductVM>
@{
    ViewData["Title"] = "Products";
}

<h2>Our products</h2>

@if (ViewBag.Message != null)
{
    <div class=" alert alert-info">
        @ViewBag.Message
    </div>
}
@if (ViewBag.Error != null)
{
    <div class=" alert alert-danger">
        @ViewBag.Error
    </div>
}

@foreach (var product in Model)
{
    <partial name="_seeProducts" for="@product" />
}

<a asp-controller="Product" asp-action="CreateProduct" class="btn btn-success">Create Product</a>